        <!--<item name="android:actionBarItemBackground">@null</item>-->
        <!--<item name="android:dropDownListViewStyle">@style/MyListViewStyle</item>-->
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/adapter_progressbar</item>
    </style>

</resources>
